<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1565C0">
        <ImageView
            android:id="@+id/iv_searach"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_search" />
        <TextView
            android:id="@+id/tv_customer_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_cancel"
            android:layout_toRightOf="@+id/iv_searach"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="Seleccion del equipo"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/iv_cancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#1565C0"
            android:src="@drawable/ic_delete_white" />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar"
        android:layout_margin="8dp"
        android:background="@drawable/edit_border"
        android:ems="20"
        android:hint="Palabras claves..."
        android:inputType="textAutoCorrect"
        android:maxLength="30"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        android:textSize="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lv_workers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:divider="#808080"
            android:dividerHeight="1dp"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>